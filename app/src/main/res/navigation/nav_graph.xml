<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcome">
<!--  app:popUpTo="@id/favFragment"             app:popUpToInclusive="true"             app:popUpToSaveState="true"  -->

    <fragment
        android:id="@+id/welcome"
        android:name="com.example.fitness_app.welcome.FragmentWelcome"
        android:label="@string/welcome_text"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/welcome_to_login"
            app:destination="@id/log_in"/>
        <action
            android:id="@+id/welcome_to_signup"
            app:destination="@id/signup"/>
    </fragment>

    <fragment
        android:id="@+id/log_in"
        android:name="com.example.fitness_app.login.FragmentLogIn"
        android:label="@string/login"
        tools:layout="@layout/fragment_log_in">
        <action
            android:id="@+id/login_to_signup"
            app:destination="@id/signup">
        </action>
        <action
            android:id="@+id/login_to_home"
            app:destination="@id/home">
        </action>
    </fragment>

    <fragment
        android:id="@+id/signup"
        android:name="com.example.fitness_app.signup.FragmentSignup"
        android:label="@string/register"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/signup_to_login"
            app:destination="@id/log_in">
        </action>
    </fragment>

    <fragment
        android:id="@+id/home"
        android:name="com.example.fitness_app.profile.FragmentHome"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/home_to_history"
            app:destination="@id/history">
        </action>
        <action
            android:id="@+id/home_to_workout"
            app:destination="@id/workout">
        </action>
        <action
            android:id="@+id/home_to_exercises"
            app:destination="@+id/exercises">
        </action>
        <action
            android:id="@+id/measures"
            app:destination="@+id/measures">
        </action>
    </fragment>

    <fragment
        android:id="@+id/history"
        android:name="com.example.fitness_app.history.FragmentHistory"
        tools:layout="@layout/fragment_history">
    </fragment>

    <fragment
        android:id="@+id/workout"
        android:name="com.example.fitness_app.workout.FragmentWorkout"
        tools:layout="@layout/fragment_workout">
    </fragment>

    <fragment
        android:id="@+id/measures"
        android:name="com.example.fitness_app.measures.FragmentMeasures"
        tools:layout="@layout/fragment_measures">
    </fragment>

    <fragment
        android:id="@+id/exercises"
        android:name="com.example.fitness_app.exercise.FragmentExercises"
        tools:layout="@layout/fragment_exercises">
    </fragment>

</navigation>
